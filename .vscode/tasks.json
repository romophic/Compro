{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C++ build",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++17",
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "-D DEBUG",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compile c++ file"
    }
  ]
}