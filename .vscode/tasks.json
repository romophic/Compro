{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "build by clang",
      "command": "clang++",
      "args": [
        "-std=gnu++23",
        "-Wall",
        "-Og",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compile c++ file"
    }
  ]
}